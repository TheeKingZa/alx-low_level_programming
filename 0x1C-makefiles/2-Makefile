# Define variables
CC = gcc        # The compiler to be used (gcc)
SRC = main.c school.c   # List of source files
OBJ = $(SRC:.c=.o)     # List of object files derived from source files
NAME = school          # Name of the executable

# The default target is 'all'
all: $(OBJ)
	# 'all' rule depends on object files
	@echo "Compiling..."
	# Display a message
	@$(CC) $(OBJ) -o $(NAME)
	# Compile object files into the executable 'school'
	@echo "Done."
	# Display a completion message

